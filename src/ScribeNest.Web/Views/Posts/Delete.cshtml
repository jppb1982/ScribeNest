@model ScribeNest.Domain.Entities.Post
@{
    ViewData["Title"] = "Eliminar Post";
}
<h2>Eliminar post</h2>
<p class="text-muted">¿Seguro que querés eliminar este post? Esta acción no se puede deshacer.</p>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text text-muted">@Model.PublishedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
